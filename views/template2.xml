<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="contact_us_template" name="Contact Us Template">
        <div class="contact-us-page">
            <h1>Get in Touch</h1>
            <p>Weâ€™d love to hear from you. Please fill out the form below to get in touch.</p>

            <!-- Contact Form -->
            <form action="/contact_us2/submit" method="POST">
                <div>
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required="True"/>
                </div>
                <div>
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required="True"/>
                </div>
                <div>
                    <label for="message">Message:</label>
                    <textarea id="message" name="message" rows="4" required="True"></textarea>
                </div>
                <button type="submit">Send Message</button>
            </form>

            <div class="footer">
                <p>Feel free to reach out to us on our social media channels.</p>
                <ul>
                    <li><a href="https://facebook.com/satyajitbehera" target="_blank">Facebook</a></li>
                    <li><a href="https://github.com/capchi079"  text-decoration="none"  target="_blank">GitHub</a></li>
                </ul>
            </div>
        </div>
    </template>
</odoo>
